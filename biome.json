{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"attributePosition": "auto",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"javascript": {
		"globals": [
			"Astro"
		]
	}
}
